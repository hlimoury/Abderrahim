<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8" />
  <title>Rapports Archivés</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-4">
  <h1>Rapports Archivés</h1>
  
  <% 
    // Grouper les rapports par région
    const byRegion = archivedReports.reduce((acc, rpt) => {
      (acc[rpt.region] = acc[rpt.region] || []).push(rpt);
      return acc;
    }, {});
    
    // Fonction pour extraire et formater la période
    function extractPeriod(title) {
      const parts = title.split('| Période:');
      if (parts.length < 2) return '—';
      const raw = parts[1].trim(); // ex: "De Janvier à Février 2025" ou "De Janvier à Janvier 2025"
      const m = raw.match(/^De\s+(\S+)\s+à\s+(\S+)\s+(\d{4})$/);
      if (m) {
        const [, start, end, year] = m;
        return start === end ? `${start} ${year}` : raw;
      }
      return raw;
    }
  %>
  
  <% Object.keys(byRegion).forEach(region => { %>
    <h2 class="mt-5">Région : <%= region %></h2>
    <table class="table table-bordered mt-2">
      <thead class="table-light">
        <tr>
          <th>Titre</th>
          <th>Période</th>
          <th>Utilisateur</th>
          <th>Date Envoi</th>
          <th>PDF</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% 
          byRegion[region]
            .sort((a, b) => new Date(b.createdAt) - new Date(a.createdAt))
            .forEach(report => {
              const sentAt = new Date(report.createdAt);
              const periodLabel = extractPeriod(report.title);
        %>
          <tr>
            <td><%= report.title %></td>
            <td>
              <span class="badge bg-info text-white">
                <%= periodLabel %>
              </span>
            </td>
            <td><%= report.user %></td>
            <td><%= sentAt.toLocaleString('fr-FR') %></td>
            <td>
              <a href="/admin/pdf/<%= report._id %>" class="btn btn-sm btn-primary">Télécharger</a>
            </td>
            <td>
              <form action="/admin/archived/<%= report._id %>/delete" method="POST" style="display:inline">
                <button class="btn btn-danger btn-sm" onclick="return confirm('Supprimer définitivement ?');">
                  Supprimer
                </button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% }); %>
  
  <a href="/stats" class="btn btn-secondary mt-4">← Retour Stats</a>
</body>
</html>
