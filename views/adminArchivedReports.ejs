<!-- views/adminArchivedReports.ejs -->

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>Rapports Archivés</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-4">
  <h1>Rapports Archivés</h1>

  <table class="table table-bordered mt-4">
    <thead>
      <tr>
        <th>Titre</th>
        <th>Utilisateur</th>
        <th>Date Envoi</th>
        <th>PDF</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% archivedReports.forEach(report => { %>
        <tr>
          <td><%= report.title %></td>
          <td><%= report.user %></td>
          <td><%= new Date(report.createdAt).toLocaleString('fr-FR') %></td>
          <td>
            <!-- If you want direct download link: -->
            <a href="<%= report.filePath %>" target="_blank">Voir PDF</a>
            <!-- Note: If you want an in-server route, you could create
                 a route like /admin/archived/:id/download that streams the file. -->
          </td>
          <td>
            <form action="/admin/archived/<%= report._id %>/delete" method="POST" style="display:inline;">
              <button class="btn btn-danger btn-sm" onclick="return confirm('Supprimer définitivement?');">
                Supprimer
              </button>
            </form>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>

  <a href="/stats" class="btn btn-secondary mt-3">Retour Stats</a>
</body>
</html>
