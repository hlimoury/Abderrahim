<h1>Éditer Demande de Règlement Litige</h1>
<a href="/supermarkets/<%= supermarketId %>/instance/<%= instanceId %>/drl" class="btn btn-secondary mb-3">Retour</a>

<form action="/supermarkets/<%= supermarketId %>/instance/<%= instanceId %>/drl/editer/<%= drlItem._id %>" method="POST">
  <!-- Valeur -->
  <div class="form-group">
    <label>Valeur</label>
    <input 
      type="text" 
      class="form-control mb-2" 
      name="valeur" 
      value="<%= drlItem.valeur %>"
      required
    >
  </div>
  
  <!-- Statut (Accepté/Refusé) -->
  <div class="form-group">
    <label>Statut</label>
    <select class="form-control mb-2" name="statut" required>
      <option value="Accepté" <%= drlItem.statut === 'Accepté' ? 'selected' : '' %>>Accepté</option>
      <option value="Refusé" <%= drlItem.statut === 'Refusé' ? 'selected' : '' %>>Refusé</option>
    </select>
  </div>
  
  <!-- Date -->
  <div class="form-group">
    <label>Date</label>
    <input 
      type="date" 
      class="form-control mb-2" 
      name="date" 
      value="<%= drlItem.date.toISOString().split('T')[0] %>"
      required
    >
  </div>

  <button class="btn btn-primary">Mettre à jour</button>
</form>