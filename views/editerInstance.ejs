
<h1>Modifier l'Instance</h1>
<a href="/supermarkets/<%= supermarketId %>" class="btn btn-secondary mb-3">Retour</a>

<form action="/supermarkets/<%= supermarketId %>/instance/editer/<%= instance._id %>" method="POST">
  <div class="form-group">
    <label for="mois">Mois</label>
    <input 
      type="number" 
      class="form-control" 
      id="mois" 
      name="mois" 
      min="1" 
      max="12"
      value="<%= instance.mois %>" 
      required
    >
  </div>
  <div class="form-group">
    <label for="annee">Année</label>
    <input 
      type="number" 
      class="form-control" 
      id="annee" 
      name="annee" 
      value="<%= instance.annee %>"
      required
    >
  </div>
  <button type="submit" class="btn btn-primary">Mettre à jour</button>
</form>
