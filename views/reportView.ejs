<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= reportData.title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        .report-header {
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid #dee2e6;
            background-color: #f8f9fa;
            padding: 1rem;
            border-radius: 0.5rem;
        }
        .section-header {
            background-color: #f8f9fa;
            padding: 1rem;
            margin-bottom: 1rem;
            border-left: 4px solid #0d6efd;
            border-radius: 0.25rem;
        }
        .report-action-btn {
            margin-right: 0.5rem;
        }
        .editable-section {
            padding: 0.5rem;
            border: 1px dashed transparent;
            border-radius: 0.25rem;
            transition: all 0.3s;
        }
        .editable-section:hover {
            border-color: #0d6efd;
            background-color: #f8f9fa;
        }
        .edit-mode .editable-section {
            border-color: #0d6efd;
            background-color: #f8f9fa;
        }
        #editButtons {
            display: none;
        }
        .edit-mode #editButtons {
            display: flex;
        }
        .edit-mode #viewButtons {
            display: none;
        }
        @media print {
            .no-print {
                display: none !important;
            }
            .section-header {
                background-color: #f8f9fa !important;
                -webkit-print-color-adjust: exact;
            }
            .page-break-before {
                page-break-before: always;
            }
        }
        .summary-card {
            border-radius: 0.5rem;
            box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,0.075);
            margin-bottom: 1.5rem;
        }
        .summary-card .card-header {
            background-color: #0d6efd;
            color: white;
            border-top-left-radius: 0.5rem;
            border-top-right-radius: 0.5rem;
        }
        .detail-value {
            font-weight: 500;
        }
        .table-container {
            overflow-x: auto;
        }
    </style>
</head>
<body class="container mt-4">
    <!-- Report Header -->
    <div class="report-header">
        <h1><%= reportData.title %></h1>
        <p>Généré le <%= formatDate(reportData.date) %></p>
    </div>

    <!-- View Mode Actions -->
    <div class="d-flex justify-content-between mb-4 no-print">
        <div>
            <a href="/reports" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Retour
            </a>
        </div>
        <div class="d-flex">
            <a href="/reports/modifier" class="btn btn-warning report-action-btn">
                <i class="bi bi-pencil"></i> Modifier
            </a>
            <a href="/reports/download" class="btn btn-secondary report-action-btn">
                <i class="bi bi-download"></i> Télécharger PDF
            </a>
            <a href="/reports/sendToAdmin" class="btn btn-info report-action-btn">
                <i class="bi bi-send"></i> Envoyer au Admin
            </a>
        </div>
    </div>

    <!-- Report Content (Read-Only) -->
    <div id="reportContent">
        <% reportData.sections.forEach((section, sectionIndex) => { %>
            <div class="mb-5 <%= sectionIndex > 0 ? 'page-break-before' : '' %>">
                <div class="section-header">
                    <h3><%= section.title %></h3>
                </div>
                
                <% if (section.summary) { %>
                    <div class="card summary-card mb-4">
                        <div class="card-header">Résumé</div>
                        <div class="card-body">
                            <div class="row">
                                <% Object.entries(section.summary).forEach(([key, value]) => { %>
                                    <div class="col-md-3 mb-3">
                                        <span class="fw-bold"><%= key %>:</span>
                                        <span class="text-primary"><%= value %></span>
                                    </div>
                                <% }); %>
                            </div>
                        </div>
                    </div>
                <% } %>

                <% if (section.details?.length > 0) { %>
                    <div class="card">
                        <div class="card-header">Détails</div>
                        <div class="card-body table-container">
                            <table class="table table-striped table-hover">
                                <thead class="table-primary">
                                    <tr>
                                        <% Object.keys(section.details[0])
                                            .filter(k => !['id','Description'].includes(k))
                                            .forEach(header => { %>
                                            <th><%= header %></th>
                                        <% }); %>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% section.details.forEach(detail => { %>
                                        <tr>
                                            <% Object.entries(detail)
                                                .filter(([k]) => !['id','Description'].includes(k))
                                                .forEach(([key, value]) => { %>
                                                <td><%= value %></td>
                                            <% }); %>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                <% } %>
            </div>
        <% }); %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
