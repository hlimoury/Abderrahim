<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Gérer les Formations - <%= supermarket.name %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container mt-5">
    <h1 class="text-center">Gérer les Formations</h1>
    <h2 class="text-center mb-4"><%= supermarket.name %></h2>
    
    <% if (formations && formations.length > 0) { %>
      <table class="table table-bordered">
        <thead class="table-dark">
          <tr>
            <th>Nombre de formations</th>
            <th>Type de formation</th>
            <th>Date</th>
          </tr>
        </thead>
        <tbody>
          <% formations.forEach(f => { %>
            <tr>
              <td><%= f.nombreFormation %></td>
              <td><%= f.typeFormation %></td>
              <td><%= f.dateFormation.toLocaleDateString('fr-FR') %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <p>Aucune formation enregistrée.</p>
    <% } %>
    
    <hr>
    <h3>Ajouter une Formation</h3>
    <form action="/supermarket/<%= supermarket._id %>/formations" method="POST" class="card p-4 shadow">
      <div class="mb-3">
        <label class="form-label">Nombre de formations :</label>
        <input type="number" name="nombreFormation" class="form-control" value="1" min="1">
      </div>
      <div class="mb-3">
        <label class="form-label">Type de formation :</label>
        <select name="typeFormation" class="form-select" required>
          <option value="Incendie">Incendie</option>
          <option value="SST">SST</option>
          <option value="Integration">Integration</option>
        </select>
      </div>
      <div class="mb-3">
        <label class="form-label">Date de formation :</label>
        <input type="date" name="dateFormation" class="form-control" value="<%= new Date().toISOString().split('T')[0] %>">
      </div>
      <button type="submit" class="btn btn-primary">Ajouter</button>
      <a href="/supermarket/<%= supermarket._id %>" class="btn btn-secondary">Retour</a>
    </form>
  </div>
</body>
</html>
