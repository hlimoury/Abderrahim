    </table>
  </div>
</div>

<!-- ======================
     3) Sûreté
     ====================== -->
<div class="card mb-4">
  <div class="card-header">
    <h3>Sûreté</h3>
  </div>
  <div class="card-body">
    <form 
      action="/supermarkets/<%= supermarketId %>/instance/<%= instance._id %>/scoring/surete/ajouter" 
      method="POST" 
      class="form-inline mb-3"
