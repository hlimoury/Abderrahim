      </select>
      <input type="number" step="0.01" class="form-control mr-2" name="niveau" placeholder="Niveau">
      <input type="number" step="0.01" class="form-control mr-2" name="objectif" placeholder="Objectif">
      <button class="btn btn-success">Ajouter</button>
    </form>

    <table class="table">
      <thead>
        <tr>
          <th>Sous-indicateur</th>
          <th>Niveau</th>
          <th>Objectif</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% scoring.surete.forEach(function(item) { %>
          <tr>
            <td><%= item.nom %></td>
            <td><%= item.niveau %></td>
            <td><%= item.objectif %></td>
            <td>
              <a href="/supermarkets/<%= supermarketId %>/instance/<%= instance._id %>/scoring/surete/editer/<%= item._id %>" class="btn btn-warning btn-sm">Édit</a>
              <a href="/supermarkets/<%= supermarketId %>/instance/<%= instance._id %>/scoring/surete/supprimer/<%= item._id %>" class="btn btn-danger btn-sm" onclick="return confirm('Supprimer cet indicateur ?');">Delete</a>
