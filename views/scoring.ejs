
<% 
  // Provide default scoring arrays if they don't exist
  const scoring = instance.scoring || {
    securiteIncendie: [],
    sst: [],
    surete: []
  };
%>

<h1>Scoring - Instance <%= instance.mois %>/<%= instance.annee %></h1>
<a href="/supermarkets/<%= supermarketId %>" class="btn btn-secondary mb-3">Retour</a>

<!-- ======================
     1) Sécurité Incendie
     ====================== -->
<div class="card mb-4">
  <div class="card-header">
    <h3>Sécurité Incendie</h3>
  </div>
  <div class="card-body">
    <!-- Add new Sous-Indicateur with dropdown -->
    <form 
      action="/supermarkets/<%= supermarketId %>/instance/<%= instance._id %>/scoring/securiteIncendie/ajouter" 
      method="POST" 
      class="form-inline mb-3"
    >
      <select class="form-control mr-2" name="nom" required>
        <option value="" disabled selected>Sélectionnez un indicateur</option>
        <option value="Risque Incendie">Risque Incendie</option>
        <option value="Extincteurs+RIA">Extincteurs+RIA</option>
        <option value="Désenfumage+Évacuation">Désenfumage+Évacuation</option>
      </select>
      <input type="number" step="0.01" class="form-control mr-2" name="niveau" placeholder="Niveau">
      <input type="number" step="0.01" class="form-control mr-2" name="objectif" placeholder="Objectif">
      <button class="btn btn-success">Ajouter</button>
    </form>

    <!-- Table listing for Sécurité Incendie -->
    <table class="table">
      <thead>
        <tr>
          <th>Sous-indicateur</th>
          <th>Niveau</th>
          <th>Objectif</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% scoring.securiteIncendie.forEach(function(item) { %>
          <tr>
            <td><%= item.nom %></td>
            <td><%= item.niveau %></td>
            <td><%= item.objectif %></td>
            <td>
              <a href="/supermarkets/<%= supermarketId %>/instance/<%= instance._id %>/scoring/securiteIncendie/editer/<%= item._id %>" class="btn btn-warning btn-sm">Édit</a>
              <a href="/supermarkets/<%= supermarketId %>/instance/<%= instance._id %>/scoring/securiteIncendie/supprimer/<%= item._id %>" class="btn btn-danger btn-sm" onclick="return confirm('Supprimer cet indicateur ?');">Delete</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

<!-- ======================
