<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Totaux par Magasin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container mt-5">
    <h1 class="text-center">Totaux par Magasin</h1>
    
    <!-- Search Form -->
    <form action="/totals/supermarkets" method="GET" class="mb-3 d-flex gap-2">
      <input 
        type="text" 
        name="search" 
        class="form-control" 
        placeholder="Rechercher un magasin..." 
        value="<%= typeof search !== 'undefined' ? search : '' %>"
      >
      <button type="submit" class="btn btn-primary">Rechercher</button>
    </form>
    
    <!-- List of per-store totals -->
    <% if (supermarketTotals.length > 0) { %>
      <% supermarketTotals.forEach(s => { %>
        <div class="card p-4 shadow my-3">
          <h3><%= s.name %></h3>
          <p><strong>Interpellations :</strong> <%= s.totalInterpellations %></p>
          <p><strong>Clients :</strong> <%= s.clientsCount %></p>
          <p><strong>Personnel :</strong> <%= s.personnelCount %></p>
          <p><strong>Prestataire :</strong> <%= s.prestataireCount %></p>
          <p><strong>Valeur marchandise récupérée (DH) :</strong> <%= s.recoveredValue.toFixed(2) %></p>
          <p><strong>Formations :</strong> <%= s.totalFormations %></p>
          <p><strong>Accidents de travail :</strong> <%= s.totalAccidents %></p>
          <p><strong>Autres incidents :</strong> <%= s.totalIncidents %></p>
        </div>
      <% }) %>
    <% } else { %>
      <p>Aucun magasin trouvé.</p>
    <% } %>

    <a href="/" class="btn btn-secondary mt-3">Retour</a>
  </div>
</body>
</html>
