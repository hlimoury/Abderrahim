
<h1>Tableau de Bord - Statistiques</h1>
<a href="/adminlogout" class="btn btn-danger mb-3">Se Déconnecter (Admin)</a>

<!-- Global Totals -->
<div class="card mb-4">
  <div class="card-header">
    <h3>Totaux Globaux</h3>
  </div>
  <div class="card-body">
    <p>Formation: <%= globalTotals.formation %> personnes</p>
    <p>AT: <%= globalTotals.accidents.count %> accidents, <%= globalTotals.accidents.jours %> jours d'arrêt</p>
    <p>Incidents: <%= globalTotals.incidents %></p>
    <p>Interpellations Globales: 
      <%= globalTotals.interpellations.personnes %> personnes, 
      <%= globalTotals.interpellations.poursuites %> poursuites, 
      <%= globalTotals.interpellations.valeur.toFixed(3).replace('.', ',') %> kDH récupérés
    </p>
  </div>
</div>

<!-- Interpellations by Type -->
<div class="card mb-4">
  <div class="card-header">
    <h3>Interpellations par Type</h3>
  </div>
  <div class="card-body">
    <p>
      Clients: <%= interpellationByType.Client.personnes %> personnes, 
      <%= interpellationByType.Client.poursuites %> poursuites, 
      <%= interpellationByType.Client.valeur.toFixed(3).replace('.', ',') %> kDH récupérés
    </p>
    <p>
      Personnels: <%= interpellationByType.Personnel.personnes %> personnes, 
      <%= interpellationByType.Personnel.poursuites %> poursuites, 
      <%= interpellationByType.Personnel.valeur.toFixed(3).replace('.', ',') %> kDH récupérés
    </p>
    <p>
      Prestataires: <%= interpellationByType.Prestataire.personnes %> personnes, 
      <%= interpellationByType.Prestataire.poursuites %> poursuites, 
      <%= interpellationByType.Prestataire.valeur.toFixed(3).replace('.', ',') %> kDH récupérés
    </p>
  </div>
</div>


<!-- Formation par Type -->
