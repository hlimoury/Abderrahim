<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Modifier l'Interpellation</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    rel="stylesheet"
  >
</head>
<body class="bg-light">
  <div class="container mt-5">
    <h1 class="text-center">Modifier l'Interpellation</h1>
    <h2 class="text-center mb-4"><%= supermarket.name %></h2>

    <form
      action="/supermarket/<%= supermarket._id %>/interpellations/<%= interpellation._id %>/edit"
      method="POST"
      class="card p-4 shadow"
    >
      <div class="mb-3">
        <label class="form-label">Type de personne :</label>
        <select name="typePersonne" class="form-select" required>
          <option value="client" <%= interpellation.typePersonne === 'client' ? 'selected' : '' %>>
            Client
          </option>
          <option value="personnel" <%= interpellation.typePersonne === 'personnel' ? 'selected' : '' %>>
            Personnel
          </option>
          <option value="prestataire" <%= interpellation.typePersonne === 'prestataire' ? 'selected' : '' %>>
            Prestataire
          </option>
        </select>
      </div>

      <div class="mb-3">
        <label class="form-label">Nombre de personnes :</label>
        <input
          type="number"
          name="nombrePersonnes"
          class="form-control"
          value="<%= interpellation.nombrePersonnes %>"
          min="1"
        >
      </div>

      <div class="mb-3">
        <label class="form-label">Poursuites judiciaires (nombre) :</label>
        <input
          type="number"
          name="poursuitesJudiciaires"
          class="form-control"
          value="<%= interpellation.poursuitesJudiciaires %>"
          min="0"
        >
      </div>

      <div class="mb-3">
        <label class="form-label">Valeur marchandise récupérée (€) :</label>
        <input
          type="number"
          step="0.01"
          name="valeurMarchandiseRecuperee"
          class="form-control"
          value="<%= interpellation.valeurMarchandiseRecuperee %>"
        >
      </div>

      <div class="mb-3">
        <label class="form-label">Rayon concerné :</label>
        <input
          type="text"
          name="rayonConcerne"
          class="form-control"
          value="<%= interpellation.rayonConcerne %>"
        >
      </div>

      <div class="mb-3">
        <label class="form-label">Date de l'interpellation :</label>
        <input
          type="date"
          name="dateInterpellation"
          class="form-control"
          value="<%= interpellation.dateInterpellation.toISOString().split('T')[0] %>"
        >
      </div>

      <button type="submit" class="btn btn-primary">Mettre à jour</button>
      <a href="/supermarket/<%= supermarket._id %>/interpellations" class="btn btn-secondary">Retour</a>
    </form>
  </div>
</body>
</html>
