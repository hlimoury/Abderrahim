
<h1>Modifier Accident</h1>
<a href="/supermarkets/<%= supermarketId %>/instance/<%= instanceId %>/accidents" class="btn btn-secondary mb-3">
  Retour
</a>

<form 
  action="/supermarkets/<%= supermarketId %>/instance/<%= instanceId %>/accidents/editer/<%= accidentItem._id %>" 
  method="POST"
>
  <div class="form-group">
    <label for="nombreAccidents">Nombre d'accidents</label>
    <input
      type="number"
      class="form-control"
      id="nombreAccidents"
      name="nombreAccidents"
      value="<%= accidentItem.nombreAccidents %>"
      required
    >
  </div>

  <div class="form-group">
    <label for="joursArret">Nombre de jours d'arrêt de travail</label>
    <input
      type="number"
      class="form-control"
      id="joursArret"
      name="joursArret"
      value="<%= accidentItem.joursArret %>"
      required
    >
  </div>

  <div class="form-check mb-2">
    <input
      type="checkbox"
      class="form-check-input"
      id="accidentDeclare"
      name="accidentDeclare"
      <%= accidentItem.accidentDeclare ? 'checked' : '' %>
    >
    <label class="form-check-label" for="accidentDeclare">Accident déclaré ?</label>
  </div>

  <!-- Cause dropdown -->
  <div class="form-group">
    <label for="cause">Cause</label>
    <select class="form-control" id="cause" name="cause" required>
      <option value="" disabled>-- Sélectionnez la cause --</option>
      <option value="Chutes et glissades" <%= accidentItem.cause === 'Chutes et glissades' ? 'selected' : '' %>>Chutes et glissades</option>
      <option value="Manutention manuelle" <%= accidentItem.cause === 'Manutention manuelle' ? 'selected' : '' %>>Manutention manuelle</option>
      <option value="Hachoirs" <%= accidentItem.cause === 'Hachoirs' ? 'selected' : '' %>>Hachoirs</option>
      <option value="trancheuse" <%= accidentItem.cause === 'trancheuse' ? 'selected' : '' %>>trancheuse</option>
      <option value="Scie Électrique boucherie" <%= accidentItem.cause === 'Scie Électrique boucherie' ? 'selected' : '' %>>Scie Électrique boucherie</option>
      <option value="Outils tranchants" <%= accidentItem.cause === 'Outils tranchants' ? 'selected' : '' %>>Outils tranchants</option>
      <option value="Chutes d’objets" <%= accidentItem.cause === 'Chutes d’objets' ? 'selected' : '' %>>Chutes d’objets</option>
      <option value="Agressions et violences" <%= accidentItem.cause === 'Agressions et violences' ? 'selected' : '' %>>Agressions et violences</option>
      <option value="Autres" <%= accidentItem.cause === 'Autres' ? 'selected' : '' %>>Autres</option>
    </select>
  </div>

  <div class="form-group">
    <label for="date">Date</label>
    <input
      type="date"
      class="form-control"
      id="date"
      name="date"
      value="<%= accidentItem.date ? accidentItem.date.toISOString().split('T')[0] : '' %>"
      required
    >
  </div>

  <button type="submit" class="btn btn-primary">Mettre à jour</button>
</form>
